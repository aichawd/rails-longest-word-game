<div class="container">
  <h3>
    Longest word game
  </h3>
  <br>

  <h5>Here is your grid:</h5>
  <div class="letters">
    <ul class="letter-list d-flex">
      <% @letters.each do |letter| %>
      <li><%= letter %></li>
      <% end %>
    </ul>
  </div>
  <br>

  <div class="try">
    <p>What is the longest word you can find?</p>
    <form method="post" action="/score" class="d-flex">
      <input type="text" name="word" class="form-control">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <%= hidden_field_tag :timestamp, @start %>
      <input type="submit" value="play" class="btn btn-secondary">
    </form>
  </div>

</div>
